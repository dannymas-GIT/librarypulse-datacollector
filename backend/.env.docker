# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/librarypulse
TEST_DATABASE_URL=postgresql://postgres:postgres@db:5432/librarypulse_test

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
ENVIRONMENT=development
PROJECT_NAME=IMLS Library Pulse
API_V1_STR=/api/v1

# Data Sources
IMLS_DATA_BASE_URL=https://www.imls.gov/research-evaluation/data-collection/public-libraries-survey
DATA_STORAGE_PATH=./data

# Security
SECRET_KEY=librarypulse-local-development-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Settings
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://127.0.0.1:5173","http://localhost:8001"]

# Frontend URL for email links
FRONTEND_URL=http://localhost:5173

# Email Settings
EMAILS_ENABLED=true
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_TLS=false
EMAILS_FROM_EMAIL=noreply@librarypulse.com
EMAILS_FROM_NAME=Library Pulse

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# Redis Settings
REDIS_URL=redis://redis:6379/0
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_REGISTER=3/hour
RATE_LIMIT_PASSWORD_RESET=3/hour
RATE_LIMIT_EMAIL_VERIFY=5/minute 